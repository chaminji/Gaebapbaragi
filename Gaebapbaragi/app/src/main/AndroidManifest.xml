<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsm2017.gaebapbaragi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <!--android:usesCleartextTraffic="true" - 보안이 되지 않은 프로토콜도 사용 가능-->

        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity android:name=".LoginActivity"/>

        <activity android:name=".SignupActivity"/>

        <activity android:name=".InfoMealActivity"/>

        <activity android:name=".InfoSnackActivity"/>

        <activity android:name=".InfoDrugActivity"/>

        <activity android:name=".InformationActivity"/>

        <activity android:name=".InformationViewActivity"/>

        <activity android:name=".AddmealActivity"/>

        <activity android:name=".AddsnackActivity"/>

        <activity android:name=".AdddrugActivity"/>

        <activity android:name=".AddpetActivity"/>

    </application>

</manifest>