<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="7.5dp">

        <TextView
            android:id="@+id/cardview_snack_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="간식명"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardview_snack_text2" />

        <TextView
            android:id="@+id/cardview_snack_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="복용 날짜"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_snack_text1"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>